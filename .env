# Database Configuration
DATABASE_URL=sqlite://./news_platform.db

# API Configuration
API_V1_STR=/api
PROJECT_NAME=NewsGuard API
PROJECT_VERSION=1.0.0

# Frontend Configuration (for CORS and frontend use)
NEXT_PUBLIC_API_URL=http://localhost:7070/api
FRONTEND_URL=http://localhost:3000

# Pagination Settings
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Content Settings
MAX_ARTICLE_TITLE_LENGTH=200
MAX_ARTICLE_CONTENT_LENGTH=50000
MAX_CATEGORY_NAME_LENGTH=100

# Newsletter Configuration
MAX_NEWSLETTER_EMAILS=100000

# Search Configuration
MAX_SEARCH_RESULTS=100
SEARCH_MIN_QUERY_LENGTH=2

# Trending Articles
TRENDING_ARTICLES_LIMIT=10
TRENDING_DAYS_THRESHOLD=7

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Admin Settings (optional - set if needed)
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=secure_password

# File Upload Settings (for future use)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/webp"]